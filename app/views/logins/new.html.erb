<div class="container login-form-container">
  <div class="row justify-content-center m-5">
    <div class="col-auto">
      <h1>Login</h1>
    </div>
  </div>
  <div class="container">
    <div class="row ps-4">
      <div class="col offset-3">
        <% if flash.now[:alert] %>
          <span class="username-password-error text-danger"><%= t('.error.userpass') %></span>
        <% end %>
      </div>
    </div>
    <div class="row ps-4">
      <div class="col offset-3">
        <% if flash[:login_require] && Current.user.nil? %>
          <span class="login-alert text-danger"><%= t('.error.login') %></span>
        <% end %>
      </div>
    </div>
  </div>
  <%= form_with url: login_path, html: {novalidate: true, id: "login_form"} do |f| %>
    <div class="row justify-content-center m-5">
      <div class="col-2">
        <%= f.label :username, "Username: ", class: "form-label" %>
      </div>
      <div class="col-4">
        <%= f.text_field :username, class: "form-control", required: true %>
        <div class="invalid-feedback"><%= t('.feedback') %></div>
      </div>
    </div>
    <div class="row justify-content-center m-5">
      <div class="col-2">
        <%= f.label :password, "Password: ", class: "form-label" %>
      </div>
      <div class="col-4">
        <%= f.password_field :password, class: "form-control", required: true %>
        <div class="invalid-feedback"><%= t('.feedback') %></div>
      </div>
    </div>
    <div class="row justify-content-center m-5">
      <div class="col-2">
        <%= f.submit "Login", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>