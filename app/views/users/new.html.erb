<div class="container p-3 m-3 register-form">
  <div class="row justify-content-center m-5">
    <div class="col-auto">
      <h1>Register</h1>
    </div>
  </div>
  <%= form_with model: @user, url: register_path, html: {novalidate: true, id:"signUpForm"} do |f| %>
    <div class="row justify-content-center m-5">
      <div class="col-2 offset-2">
        <%= f.label :username, t('.label.username') + ": ", class: "col-form-label" %>
      </div>
      <div class="col-4">
        <%= f.text_field :username, class: "form-control", required: true %>
        
      </div>
      <div class="col-2">
        <% if flash.now[:alert] && !@user.errors[:username].empty? %>
          <span class="form-text"><%= t('.help.username') %></span>
        <% end %>
      </div>
    </div>
    <div class="row justify-content-center m-5">
      <div class="col-2 offset-2">
        <%= f.label :email, t('.label.email') + ": ", class: "col-form-label" %>
      </div>
      <div class="col-4">
        <%= f.email_field :email, class: "form-control", required: true %>
      </div>
      <div class="col-2">
        <% if flash.now[:alert] && !@user.errors[:email].empty? %>
          <span class="form-text"><%= t('.help.email') %></span>
        <% end %>
      </div>
    </div>
    <div class="row justify-content-center m-5">
      <div class="col-2">
        <%= f.label :password, t('.label.password') + ": ", class: "col-form-label" %>
      </div>
      <div class="col-4">
        <%= f.password_field :password, class: "form-control", required: true %>
      </div>
    </div>
    <div class="row justify-content-center m-5">
      <div class="col-2">
        <%= f.label :password_again, "Confirm password: ", class: "col-form-label" %>
      </div>
      <div class="col-4">
        <%= f.password_field :password_again, class: "form-control", required: true %>
      </div>
    </div>
    <div class="row justify-content-center m-5">
      <div class="col-2">
        <%= f.submit "Register", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>