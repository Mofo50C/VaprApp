<div class="container p-3 m-3 register-form-container">
  <div class="d-flex justify-content-center m-5">
    <h1><%= t('.register_title') %></h1>
  </div>
  <% if flash.now[:alert] && !@user.errors[:username].empty? %>
    <div class="row ps-4">
      <div class="username-dupe text-danger col offset-3">
        <%= t('.help.username') %>
      </div>
    </div>
  <% end %>
  <% if flash.now[:alert] && !@user.errors[:email].empty? %>
    <div class="row ps-4">
      <div class="col offset-3 email-dupe text-danger">
        <%= t('.help.email') %>
      </div>
    </div>
  <% end %>
  <%= form_with model: @user, url: register_path, method: :post, html: {novalidate: true, id:"register_form", class: "needs-validation"} do |f| %>
    <div class="container">
      <div class="row justify-content-center m-5">
        <%= f.label :username, format_label(t('.label.username')), class: "col-2 col-form-label" %>
        <div class="col-4">
          <%= f.text_field :username, class: "form-control", required: true %>
          <div class="invalid-feedback"><%= t('.feedback.username') %></div>
        </div>
      </div>
      <div class="row justify-content-center m-5">
        <%= f.label :email, format_label(t('.label.email')), class: "col-form-label col-2" %>
        <div class="col-4">
          <%= f.email_field :email, class: "form-control", required: true %>
          <div class="invalid-feedback"><%= t('.feedback.email') %></div>
        </div>
      </div>
      <div class="row justify-content-center m-5">
        <%= f.label :password, format_label(t('.label.password')), class: "col-form-label col-2" %>
        <div class="col-4">
          <%= f.password_field :password, class: "form-control", required: true %>
          <div class="invalid-feedback"><%= t('.feedback.password') %></div>
        </div>
      </div>
      <div class="row justify-content-center m-5">
        <%= f.label :password_confirmation, format_label(t('.label.pass_verify')), class: "col-form-label col-2" %>
        <div class="col-4">
          <%= f.password_field :password_confirmation, class: "form-control", required: true %>
          <div class="invalid-feedback"><%= t('.feedback.pass_verify') %></div>
        </div>
      </div>
      <div class="row justify-content-center m-5">
        <div class="col-auto">
          <%= f.submit t('.register_button'), class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  <% end %>
</div>