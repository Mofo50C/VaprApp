<div class="container p-3 games-page-container">
  <h2><%= t('.games_list') %></h2>
  <hr/>
  <div class="">
  <ul class="list-group p-3">
    <% @games.each do |game| %>
      <li class="games-list-entry list-group-item">
        <div class="d-flex">
          <div class="p-5">
            <%= image_tag get_logo_path(game.title), class: "game-logo" %>
          </div> 
          <div class="p-5">
            <p><h3><%= link_to game.title, game_path(game)%></h3></p>
            <p><%= game.description %></p>
            <div class="d-flex justify-content-end">
              <%= render partial: "shared/price", locals: {game: game, sale: true} %>
            </div>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
</div>